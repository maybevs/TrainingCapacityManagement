@model IEnumerable<TrainingCapacityManagement.Models.TrainingsRegistration>

@{
    ViewData["Title"] = "Index";
}

<h1>Anmeldungen</h1>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Training.Sport.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Training.StartTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Training.Sport.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Training.StartTime)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Teilnahme absagen</a>
                </td>
            </tr>
        }
    </tbody>
</table>
