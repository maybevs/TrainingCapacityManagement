@model TrainingCapacityManagement.Models.Training

@{
    ViewData["Title"] = "Create";
}
<h1>Anlegen</h1>

<h4>Training</h4>
<hr />
<div class="row">
    <div class="col-lg-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Sport" class="control-label"></label>
                    @Html.DropDownListFor(m => m.SportsSelection, new SelectList(ViewBag.Sports, "Id", "Name"), new { @class = "form-control" })
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Gym" class="control-label"></label>
                    @Html.DropDownListFor(m => m.GymSelection, new SelectList(ViewBag.Gyms, "Id", "Name"), new { @class = "form-control" })
                </div>
            </div>
            <hr class="border-primary" />
            <div class="row">
                <div class="col">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <hr class="border-primary" />
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="StartTime" class="control-label"></label>
                    <input asp-for="StartTime" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="EndTime" class="control-label"></label>
                    <input asp-for="EndTime" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
            </div>
            <hr class="border-primary" />
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HouseholdsSharePlace" /> @Html.DisplayNameFor(model => model.HouseholdsSharePlace)
                </label>
            </div>
            <hr class="border-primary" />
            <div class="form-group">
                <label asp-for="SignupMessage" class="control-label"></label>
                <input asp-for="SignupMessage" class="form-control" />
                <span asp-validation-for="SignupMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SafetyConceptURL" class="control-label"></label>
                <input asp-for="SafetyConceptURL" class="form-control" />
                <span asp-validation-for="SafetyConceptURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishingDate" class="control-label"></label>
                <input asp-for="PublishingDate" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="PublishingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück zur Trainingsliste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
