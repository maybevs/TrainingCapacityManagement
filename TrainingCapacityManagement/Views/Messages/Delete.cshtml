@model TrainingCapacityManagement.Models.Message

@{
    ViewData["Title"] = "Delete";
}

<h1>Löschen</h1>

<h3>Möchtest du diese Nachricht löschen?</h3>
<div>
    <h4>Nachricht</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Löschen" class="btn btn-danger" /> |
        <a asp-action="Index">Zurück zur Nachrichtenliste</a>
    </form>
</div>
